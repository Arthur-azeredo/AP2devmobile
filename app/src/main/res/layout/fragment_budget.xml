<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Qual o orçamento?"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/radioGroupBudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/radioGratis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#33FFFFFF"
            android:button="@null"
            android:drawableStart="@drawable/custom_checkbox_selector"
            android:drawablePadding="12dp"
            android:padding="12dp"
            android:text="Grátis"
            android:textColor="@android:color/white" />

        <RadioButton
            android:id="@+id/radioBarato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#33FFFFFF"
            android:button="@null"
            android:drawableStart="@drawable/custom_checkbox_selector"
            android:drawablePadding="12dp"
            android:padding="12dp"
            android:text="Pagando pouco (até R$50)"
            android:textColor="@android:color/white" />

        <RadioButton
            android:id="@+id/radioSemLimite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#33FFFFFF"
            android:button="@null"
            android:drawableStart="@drawable/custom_checkbox_selector"
            android:drawablePadding="12dp"
            android:padding="12dp"
            android:text="Sem limites"
            android:textColor="@android:color/white" />
    </RadioGroup>

</LinearLayout>