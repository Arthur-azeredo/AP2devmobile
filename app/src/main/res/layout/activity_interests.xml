<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InterestsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_interests" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O que te interessa mais?"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkGastronomia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#33FFFFFF"
            android:buttonTint="@drawable/checkbox_color_selector"
            android:padding="12dp"
            android:text="Gastronomia (Comer e beber)"
            android:textColor="@android:color/white" />

        <CheckBox
            android:id="@+id/checkCultura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#33FFFFFF"
            android:buttonTint="@drawable/checkbox_color_selector"
            android:padding="12dp"
            android:text="Cultura (Museu, cinema)"
            android:textColor="@android:color/white" />

        <CheckBox
            android:id="@+id/checkArLivre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#33FFFFFF"
            android:buttonTint="@drawable/checkbox_color_selector"
            android:padding="12dp"
            android:text="Ar livre (Parque, praia)"
            android:textColor="@android:color/white" />

        <Switch
            android:id="@+id/switchHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:checked="true"
            android:text="Preferência por atividades diurnas"
            android:textColor="@android:color/white" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnVerResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/azul_vibrante"
            android:textColor="@android:color/white"
            android:text="Ver minha sugestão!" />
    </LinearLayout>
</FrameLayout>