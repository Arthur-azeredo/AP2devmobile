<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".InterestsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O que te interessa mais?"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/checkGastronomia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Gastronomia (Comer e beber)" />

    <CheckBox
        android:id="@+id/checkCultura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cultura (Museu, cinema)" />

    <CheckBox
        android:id="@+id/checkArLivre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ar livre (Parque, praia)" />

    <Switch
        android:id="@+id/switchHorario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Preferência por atividades diurnas"
        android:checked="true"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/btnVerResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:text="Ver minha sugestão!" />

</LinearLayout>